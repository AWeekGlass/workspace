<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hengyu.cases.dao.CommentDAO">
	<select id="querycommentInfoById" resultType="CommentInfoVo">
		SELECT t1.id,t2.user_name AS user_name,t3.user_name AS reply_name,t1.content,t1.create_time FROM jyq_comment t1 
			LEFT JOIN jyq_admin t2 ON t1.admin_id = t2.id
			LEFT JOIN jyq_admin t3 ON t1.reply_admin_id = t3.id WHERE t1.case_id =#{caseId}
	</select>
</mapper>