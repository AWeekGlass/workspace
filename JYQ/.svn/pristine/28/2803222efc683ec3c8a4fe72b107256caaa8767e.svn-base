<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hengyu.system.dao.JoinCompanyDAO">

	<select id="queryMessagelist" resultType="MessageVo">
		SELECT
			*
		FROM
			(
				(
					SELECT
						t1.id,
						t1.new_phone phone,
						t1.company_id companyId,
						t1.create_time createTime,
						t1.`status` status,
						t1.state state,
						t2.user_name userName,
						'申请更换手机号码通知' typeName,
						1 type
					FROM
						jyq_change_phone t1
					LEFT JOIN jyq_admin t2 ON t1.user_id = t2.id
					<where>
						<if test="companyId !=null">
							AND t1.company_id = #{companyId}
						</if>
						
						<if test="status !=null">
								AND t1. STATUS = #{status}
						</if>
					</where>
					
				)
				UNION ALL
					(
						SELECT
							t1.id,
							t2.telephone phone,
							t1.company_id companyId,
							t1.create_time createTime,
							t1.`status` status,
							t1.state state,
							t1.user_name userName,
							'申请加入企业通知' typeName,
							2 type
						FROM
							jyq_join_company t1
						LEFT JOIN jyq_admin t2 ON t1.user_id = t2.id
						<where>
							<if test="companyId !=null">
								AND t1.company_id = #{companyId}
							</if>
							<if test="status !=null">
								AND t1. STATUS = #{status}
							</if>
							
						</where>
						
					)
				UNION ALL
					(
						SELECT 
							t1.id,
							t2.telephone phone,
							t1.company_id companyId,
							t1.create_time createTime,
							0 status,
							t1.is_check state,
							t2.user_name userName,
							'案例审核' typeName,
							3 type
				FROM jyq_case t1
				LEFT JOIN jyq_admin t2 ON t1.admin_id = t2.id
					<where>
						<if test="companyId !=null">
							AND t1.company_id = #{companyId}
						</if>
						<if test="status !=null">
							AND t1.status = #{status}
						</if>
					</where>
		)
			) t
		ORDER BY
			createTime DESC
	</select>
	
	<select id="queryDetail" resultType="JoinCompany">
		SELECT
			t2.user_name,
			t2.telephone phone,
			t1.*
		FROM
			jyq_join_company t1
		LEFT JOIN jyq_admin t2 ON t1.user_id = t2.id
		<where>
			t1.id=#{id}
		</where>
	</select>
</mapper>
