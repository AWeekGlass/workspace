<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hengyu.user.dao.RolePermissionDAO">
	<select id="queryCategoryByRoleId" resultType="int">
		SELECT DISTINCT t2.category_id FROM sys_role_permission t1 
			LEFT JOIN sys_resource t2 ON t1.resource_id = t2.id WHERE t1.role_id = #{roleId}
	</select>
	
	<select id="queryPermissionByRoleId" resultType="RolePermissionVo">
		SELECT t1.role_id,t1.resource_id,t1.organization_id FROM sys_role_permission t1 WHERE t1.role_id = #{roleId}
	</select>
</mapper>