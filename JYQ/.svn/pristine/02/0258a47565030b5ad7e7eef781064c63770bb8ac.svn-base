<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hengyu.cases.dao.QuestionDAO">
	<resultMap type="QuestionVo" id="questionMap">
		<id column="id" property="id"/>
		<result column="content" property="content"/>
		<result column="end_time" property="endTime"/>
		<collection property="answerList" ofType="AnswerVo" select="getAnswers" column="id"/>
	</resultMap>
	<select id="queryAll" resultMap="questionMap">
		SELECT id,content,end_time FROM jyq_question WHERE admin_id = #{userId} AND company_id = #{companyId}
	</select>
	
	<select id="getAnswers" resultType="AnswerVo">
		SELECT id,content,like_cnt,is_hot FROM jyq_answer WHERE question_id = #{id}
	</select>
</mapper>
