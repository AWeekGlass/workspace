<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hengyu.cases.dao.QuestionDAO">
	<resultMap type="QuestionVo" id="questionMap">
		<id column="id" property="id"/>
		<result column="content" property="content"/>
		<result column="end_time" property="endTime"/>
		<collection property="answerList" ofType="AnswerVo" select="getAnswers" column="{id = id,adminId = admin_id}"/>
	</resultMap>
	
	<select id="queryAll" resultMap="questionMap">
		SELECT id,content,end_time,admin_id FROM jyq_question t1 WHERE t1.admin_id = #{userId} AND t1.company_id = #{companyId}
	</select>
	
	<select id="queryDetailById" resultMap="questionMap">
		SELECT id,content,end_time,admin_id FROM jyq_question t1 WHERE t1.id = #{id}
	</select>
	
	<select id="getAnswers" resultType="AnswerVo">
		SELECT t1.id,t1.content,t1.like_cnt,t1.is_hot,
			(SELECT COUNT(*) FROM jyq_answer_like t2 WHERE t2.answer_id = t1.id AND t2.admin_id = #{adminId}) AS is_like FROM jyq_answer t1 WHERE t1.question_id = #{id}
	</select>
</mapper>
